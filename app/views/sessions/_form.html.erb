<div class="sign-up-form">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <%= form_tag sessions_path, :method => :post do %>
      
        <div class="sign-up-text-box">    
          <div class="field">
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="field">
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
          </div>
        </div>

        <div class="actions">
          <%= submit_tag "SIGN IN", class: "form-control btn btn-md btn-primary", id: "sign-up" %>
        </div>
      <% end %>

    </div>
  </div>
</div>