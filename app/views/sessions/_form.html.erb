<%= form_tag sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-md btn-primary" %>
  </div>
<% end %>